<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EmbeddedRFIDLogin" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/mono_500</item>
        <item name="colorPrimaryVariant">@color/mono_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor">@color/mono_900</item>
        <item name="materialCardViewStyle">@style/Widget.EmbeddedRFIDLogin.Card</item>
        <item name="android:textColorPrimary">@color/mono_900</item>
    </style>

    <style name="Widget.EmbeddedRFIDLogin.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardElevation">6dp</item>
    </style>

</resources>